<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_bg">

        <View
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/ecllipse1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_20sdp"
                android:src="@drawable/logo" />


            <androidx.cardview.widget.CardView
                android:id="@+id/btnMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/mobile"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/facebook"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/facebook"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGoogle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/google"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/google"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnApple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/apple"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/apple_id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />


            </androidx.cardview.widget.CardView>

         <!--   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_for_term_condition"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"/>-->


            <TextView
                android:id="@+id/tvDonHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/don_t_have_an_account_sign_up"
                android:textColor="@color/black"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>


        <View
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-10dp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/ecllipse2" />


    </RelativeLayout>
</layout>